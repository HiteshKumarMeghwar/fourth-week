{{define "data"}}

<tr>
<th scope="row">{{.ID}}</th>
<td>{{.Name}}</td>
<td>{{.Username}}</td>
<td>
{{if ne .Session_id .ID}}
<a href="/edit?id={{.ID}}">Edit</a> 
<a href="/delete?id={{.ID}}">Delete</a>
{{end}}
</td>
</tr>
{{end}}