<html>
    <head>
        <title>Register Page</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="py-12 flex justify-center">
        <div class="px-8 py-8 bg-white rounded shadow">
        <h1 class="pt-4 pb-8 text-center text-3xl font-bold text-gray-900">Register</h1>
        <form method="post" action="/login">
            <div class="py-2">
                <label for="name" class="text-sm font-semibold text-gray-800">Full Name</label>
                <input type="text" name="name" id="name" placeholder="Enter Full Name" class="w-full px-3 py-2 border border-gray-300 placeholder-gray-600 text-gray-800 rounded" required />
            </div>
            <div class="py-2">
                <label for="username" class="text-sm font-semibold text-gray-800">Username</label>
                <input type="text" name="username" id="username" placeholder="Enter Username" class="w-full px-3 py-2 border border-gray-300 placeholder-gray-600 text-gray-800 rounded" required />
            </div>
            <div class="py-2">
                <label for="password" class="text-sm font-semibold text-gray-800">Password</label>
                <input type="text" name="password" id="password" placeholder="Enter Password" class="w-full px-3 py-2 border border-gray-300 placeholder-gray-600 text-gray-800 rounded" required />
            </div>
            <div class="py-2">
                <button type="submit" class="w-full py-4 px-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded font-bold text-lg">Register</button>
            </div>
            <div class="py-2 w-full flex justify-between">
                <p class="text-xs text-gray-500">Already have an account? 
                    <a href="/login">Login</a>
                </p>
                <p class="text-xs text-gray-500">
                    <a href="/reset-pw">Forgot your password?</a>
                </p>
            </div>
        </form>
        </div>
        </div>
    </body>
</html>